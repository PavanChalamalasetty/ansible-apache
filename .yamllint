ignore: |
  /ansible-role-common/

extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
line-length: {max: 120, allow-non-breakable-words: true, allow-non-breakable-inline-mappings: true}
